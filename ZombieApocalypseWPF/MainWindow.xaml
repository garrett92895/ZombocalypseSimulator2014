<Window x:Class="ZombieApocalypseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:ZombieApocalypseWPF.UserControls"
        Title="MainWindow" Height="600" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="New" Executed="New_Executed"/>
        <CommandBinding Command="Open" Executed="Open_Executed"/>
        <CommandBinding Command="Close" Executed="Close_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New" Command="New"/>
                <MenuItem Header="Open" Command="Open"/>
                <MenuItem Header="Add">
                    <MenuItem Header="Zombie" />
                    <MenuItem Header="Player" />
                    <MenuItem Header="Item" >
                        <MenuItem Header="RangedWeapon" />
                        <MenuItem Header="MeleeWeapon" />
                        <MenuItem Header="SparePart" />
                        <MenuItem Header="Health" />
                        <MenuItem Header="Ammo" />
                        <MenuItem Header="Trap" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Close" Command="Close"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <uc:CharacterControl x:Name="PlayerControl" Loaded="PlayerControl_Loaded"/>
            
            <UniformGrid x:Name="Board"
                         Rows="15"
                         Columns="15"
                         Grid.Column="1">

            </UniformGrid>


            <uc:CharacterControl x:Name="ZombieControl" Grid.Column="2"/>
            
        </Grid>


    </Grid>
</Window>
