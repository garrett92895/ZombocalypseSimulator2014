<Window x:Class="ZombieApocalypseWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:ZombieApocalypseWPF.UserControls"
        Title="Settings" Height="200" Width="400">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="TextElement.Foreground" Value="Firebrick" />
            <Setter Property="TextElement.FontWeight" Value="SemiBold" />
            <Setter Property="TextElement.FontSize" Value="15" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="15" />
        </Style>

    </Window.Resources>
    
    <Grid>
        <uc:SettingsControl x:Name="SettingsControl"></uc:SettingsControl>
    </Grid>
</Window>
