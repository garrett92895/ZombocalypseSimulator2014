<Window x:Class="ZombieApocalypseWPF.Windows.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Item" Height="300" Width="300">
    <StackPanel>
        <ComboBox x:Name="ItemType">
            <ComboBoxItem>Corpse</ComboBoxItem>
            <ComboBoxItem>Health</ComboBoxItem>
            <ComboBoxItem>Magazine</ComboBoxItem>
            <ComboBoxItem>MeleeWeapon</ComboBoxItem>
            <ComboBoxItem>RangedWeapon</ComboBoxItem>
            <ComboBoxItem>SparePart</ComboBoxItem>
            <ComboBoxItem>Trap</ComboBoxItem>

        </ComboBox>
        <Button Click="Button_Click">
            Add To List
        </Button>
        
        <DataGrid x:Name="Inventory">
            
        </DataGrid>
        
        <StackPanel Orientation="Horizontal">
            <Label>Loction x: </Label>
            <TextBox Width="35"></TextBox>
            <Label>Y: </Label>
            <TextBox Width="35"></TextBox>
        </StackPanel>
        
        
    </StackPanel>
</Window>
