<Window x:Class="ZombieApocalypseWPF.Windows.AddZombieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:ZombieApocalypseWPF.UserControls"
        Title="AddZombieWindow" Height="900" Width="300"
        Background="Black">
    <StackPanel>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label>Class:</Label>
            <ComboBox x:Name="ZombieClass" Grid.Column="1"
                      SelectionChanged="ZombieClass_SelectionChanged_1"/>
        </Grid>
        <uc:CharacterControl x:Name="NewZombieControl">

        </uc:CharacterControl>
        <Button Click="Button_Click_1">Done</Button>
        <Button Click="Button_Click_2">Cancel</Button>
    </StackPanel>
</Window>
